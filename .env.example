# UltiStats Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
# REQUIRED: Generate a strong secret, e.g.: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=
JWT_EXPIRES_IN=7d

# Database Configuration
DATABASE_URL=./api/db/ultistats.db

# Email Configuration (for password resets and invitations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Google API Configuration (for Google Sheets integration)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_API_KEY=your-google-api-key

# Client Configuration
API_BASE_URL=http://localhost:3001/api
# Comma-separated list of allowed CORS origins
CLIENT_URL=http://localhost:3000

# Debug Mode
DEBUG=false
